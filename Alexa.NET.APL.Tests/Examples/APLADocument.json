{
  "type": "APLA",
  "version": "0.8",
  "description": "More complex example that plays two speech components, one after another",
  "compositions": {
    "JoeyVoice": {
      "parameters": [
        {
          "name": "speechContent",
          "type": "string"
        }
      ],
      "items": [
        {
          "type": "Speech",
          "contentType": "SSML",
          "content": "<speak><voice name='Joey'><lang xml:lang='en-US'>${speechContent}</lang></voice></speak>"
        }
      ]
    }
  },
  "resources": [
    {
      "numbers": {
        "fixedVolume": 0.5
      },
      "booleans": {
        "isHeadless": "${!environment.aplVersion && !environment.apltVersion}"
      }
    },
    {
      "when": "${@isHeadless}",
      "numbers": {
        "fixedVolume": "1"
      }
    }
  ],
  "mainTemplate": {
    "parameters": [
      "payload"
    ],
    "items": [
      {
        "type": "Sequencer",
        "items": [
          {
            "type": "Speech",
            "content": "Hello world."
          },
          {
            "type": "Speech",
            "content": "I am an Alexa device."
          }
        ]
      }
    ]
  }
}